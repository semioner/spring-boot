<mapper namespace="com.semion.example.sample.dao.CustomerMapper" >
    <resultMap id="BaseResultMap" type="com.semion.example.sample.domain" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="Byte" />
        <result column="country" property="country" javaType="VARCHAR"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime" />
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, name, state, country,
    </sql>

    <select id="getAll" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM customers
    </select>

    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT
        <include refid="Base_Column_List" />
        FROM customers
        WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.semion.example.sample.domain.Customer" >
        INSERT INTO
        customers
        (name,state,country)
        VALUES
        (#{name}, #{state}, #{country})
    </insert>

    <update id="update" parameterType="com.semion.example.sample.domain.Customer" >
        UPDATE
        users
        SET
        <if test="userName != null">userName = #{userName},</if>
        <if test="passWord != null">passWord = #{passWord},</if>
        nick_name = #{nickName}
        WHERE
        id = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long" >
        DELETE FROM
        customers
        WHERE
        id =#{id}
    </delete>
</mapper>